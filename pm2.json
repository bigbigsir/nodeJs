{
  "apps": [
    {
      "cwd": "./",
      "name": "port_80",
      "script": "port_80.js",
      "merge_logs": true,
      "watch": true,
      "ignore_watch": [
        "logs",
        "public",
        "node_modules"
      ],
      "out_file": "./logs/port_80/out.log",
      "error_file": "./logs/port_80/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": {
        "NODE_ENV": "production",
        "NETWORK_ENV": "inner"
      }
    },
    {
      "cwd": "./",
      "name": "port_3000",
      "script": "port_3000.js",
      "merge_logs": true,
      "watch": true,
      "ignore_watch": [
        "logs",
        "public",
        "node_modules"
      ],
      "out_file": "./logs/port_3000/out.log",
      "error_file": "./logs/port_3000/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": {
        "NODE_ENV": "production",
        "NETWORK_ENV": "inner"
      }
    }
  ]
}
