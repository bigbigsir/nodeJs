{
  "apps": [
    {
      "cwd": "./",
      "name": "port_3000",
      "script": "port_3000.js",
      "merge_logs": true,
      "watch": false,
      "ignore_watch": [
        "logs",
        "public",
        "node_modules"
      ],
      "exec_mode": "cluster",
      "instances": 2,
      "out_file": "./logs/port_3000/out.log",
      "error_file": "./logs/port_3000/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "min_uptime": "60s",
      "max_restarts": 10,
      "env": {
        "NODE_ENV": "production",
        "NETWORK_ENV": "inner"
      }
    }
  ]
}
